{% assign list = pokemon | map: 'color' | uniq %}

{% for item in list %}
  <p><strong>{{ item }}</strong></p>
    {% assign pokemons = pokemon | where: "color", item %}
    <ul>
    {% for item in pokemons %}
      <li><a href="../pokemon/{{ item.name | slugify }}">{{ item.name }}</a></li>
    {% endfor %}
    </ul>
{% endfor %}
